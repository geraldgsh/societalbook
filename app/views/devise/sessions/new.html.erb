<div class="columns is-mobile">
  <div class="column is-half is-offset-one-quarter">

  <h2 class="title is-2">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, class: "label" %><br />
      <%= f.email_field :email, class: "input", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "label" %><br />
      <%= f.password_field :password, class: "input", autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: "checkbox" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "button is-link" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>
</div>
